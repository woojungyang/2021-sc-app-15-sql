<%- include('../inc/head', { css }) %> 
<%- include('../inc/header') %> 
<div class="list-wrapperw wrapper">
	<%- include('../inc/title-book', { title, description }) %>
	<table class="book-tbl table table-hover table-striped text-center">
		<thead class="thead-dark">
			<tr>
				<th>번호</th>
				<th>도서명</th>
				<th>저자</th>
				<th>요약설명</th>
				<th>커버</th>
				<th>등록일</th>
				<th>상태</th>
			</tr>
		</thead>
		<tbody>
		<% for(let book of books) { %>
			<tr data-idx="<%= book.idx %>">
				<td><%= book.idx %></td>
				<td><%= book.title %></td>
				<td><%= book.writer %></td>
				<td class="content-td">
					<% if(book.icon) { %>
						<img src="<%= book.icon %>" class="icon">
					<% } %>&nbsp;
					<%= book.content %>
				</td>
				<td class="cover-td">
					<% if(book.cover) { %>
						<img src="<%= book.cover %>" class="cover">
					<% } %>
				</td>
				<td><%= book.createdAt %></td>
				<td><%= book.status %></td>
			</tr>
		<% } %> 
		</tbody>
	</table>
	<%- include('../inc/pager', { ...pager }) %>
</div>

<%- include('../inc/foot', { js }) %> 
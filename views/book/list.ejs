<%- include('../inc/head') %> 
<%- include('../inc/header') %> 
<div class="list-wrapper wrapper">
    <%- include('../inc/book/title-bar',{title}) %> 
    <table class="table table-hover table-striped text-center">
        <thead class="thead-dark">
            <tr>
                <th>번호</th>
                <th>도서명</th>
                <th>저자</th>
                <th>요약설명</th>
                <th>등록일</th>
                <th>상태</th>
            </tr>
        </thead>
        <tbody>
            <% for(let book of books) { %> 
                <tr>
                    <td><%= book.idx  %> </td>
                    <td class="text-left"><%=book.title  %> </td>
                    <td><%= book.writer || '미상' %> </td>
                    <td class="text-left"><%= cutTail(book.content)  %> </td>
                    <td><%= moment(book.createAt).format('YYYY-MM-DD')  %> </td>
                    <td><%= chgStatus(book.status)  %> </td>
                </tr>
            <% } %> 
        </tbody>
    </table>
</div>


<%- include('../inc/foot') %> 
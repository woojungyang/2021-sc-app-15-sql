<%- include('../inc/head', { css }) %> 
<%- include('../inc/header') %>
<script src="/js/promise.polyfill.min.js"></script> 
<script src="/js/axios.min.js"></script> 
<script src="/js/validator.min.js"></script> 
<%- include('../inc/banner-auth') %> 
<div class="form-wrapper wrapper">
	<%- include('../inc/title-bar') %> 
	<form action="/<%= LANG %>/auth/withdrawal" method="POST" name="saveForm" onsubmit="return onSubmit(this);">
		<table>
			<tbody>
				<!-- 탈퇴사유 -->
				<tr>
					<td class="title require"><%= AUTH.MSG %></td>
					<td class="content">
						<textarea name="msg" class="form-control" placeholder="<%= AUTH.MSG %>" autofocus></textarea>
					</td>
				</tr>
				<!-- 패스워드 -->
				<% if(user && user.status >= 5) { %>
					<tr>
						<td class="title require"><%= AUTH.PASSWD %></td>
						<td class="content">
							<input type="password" name="passwd" class="form-control" placeholder="<%= AUTH.PASSWD %>">
						</td>
					</tr>
				<% } else { %>
					<tr>
						<td colspan="2" class="text-center text-danger"><%= ALERT.SNS_MSG %></td>
					</tr>
				<% } %>
			</tbody>
		</table>
		<div class="btn-wrap p-3 text-center">
			<button class="btn btn-success">
				<%= BT.WITHDRAWAL %>
			</button>
			<a class="btn btn-danger" href="javascript: history.go(-1);"><%= BT.BACK %></a>
		</div>
	</form>
</div>
<script>
	var ERR = {
		PW_NULL			: "<%= ERROR.JOIN.PW_NULL %>",
		MSG_NULL		: "<%= ERROR.JOIN.MSG_NULL %>",
	};
</script>
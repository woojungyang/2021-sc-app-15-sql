<%- include('../inc/head', { css }) %> 
<%- include('../inc/header') %>
<script src="/js/promise.polyfill.min.js"></script> 
<script src="/js/axios.min.js"></script> 
<script src="/js/validator.min.js"></script> 
<%- include('../inc/banner-auth') %> 
<div class="form-wrapper wrapper">
	<%- include('../inc/title-bar') %> 
	<form action="/<%= LANG %>/mypage/user" method="POST" name="saveForm">
		<table>
			<tbody>
				<!-- 아이디 -->
				<tr>
					<td class="title"><%= MYPAGE.USERID %></td>
					<td class="content">
						<input type="text" name="userid" value="<%= userid %>" class="form-control" readonly>
					</td>
				</tr>
				<% if(provider) { %>
					<tr>
						<td colspan="2">
							<%= (provider === 'KA') ? MYPAGE.KAKAO : MYPAGE.NAVER  %>
						</td>
					</tr>
				<% } else { %>
					<!-- 패스워드 -->
					<tr>
						<td class="title require"><%= MYPAGE.PASSWD %></td>
						<td class="content">
							<input type="password" name="passwd" class="form-control" placeholder="<%= MYPAGE.PASSWD %>">
							<div class="valid passwd"></div>
						</td>
					</tr>
					<!-- 패스워드 확인 -->
					<tr>
						<td class="title require"><%= MYPAGE.PASSWD2 %></td>
						<td class="content">
							<input type="password" name="passwd2" class="form-control" placeholder="<%= MYPAGE.PASSWD2 %>">
							<div class="valid passwd2"></div>
						</td>
					</tr>
				<% } %>
				<!-- 사용자 이름 -->
				<tr>
					<td class="title require"><%= MYPAGE.USERNAME %></td>
					<td class="content">
						<input type="text" name="username" class="form-control" value="<%= username %>" placeholder="<%= MYPAGE.USERNAME %>">
						<div class="valid username"></div>
					</td>
				</tr>
				<!-- 이메일 -->
				<tr>
					<td class="title require"><%= MYPAGE.EMAIL %></td>
					<td class="content">
						<input type="text" name="email" class="form-control" value="<%= email %>" placeholder="<%= MYPAGE.EMAIL %>">
						<div class="valid email"></div>
					</td>
				</tr>
			</tbody>
		</table>
		<div class="btn-wrap p-3 text-center">
			<button class="btn btn-success" id="btSave">
				<%= BT.UPDATE %>
			</button>
			<button type="button" class="btn btn-danger" onclick="history.go(-1);">
				<%= BT.BACK %>
			</button>
		</div>
	</form>
	<form action="/<%= LANG %>/mypage/user/api" method="POST" name="apiForm" class="mt-3">
		<table>
			<tbody>
				<!-- 도메인 -->
				<tr>
					<td class="title require"><%= MYPAGE.DOMAIN %></td>
					<td class="content">
						<input type="text" name="domain" class="form-control" value="<%= domain %>" placeholder="<%= MYPAGE.DOMAIN %>">
						<div class="valid domain"></div>
					</td>
				</tr>
				<tr>
					<td class="title require"><%= MYPAGE.APIKEY %></td>
					<td class="content form-inline">
						<input type="text" name="apikey" class="form-control flex-grow-1 mr-2" value="<%= apikey %>" placeholder="<%= MYPAGE.APIKEY %>" readonly>
						<button type="button" class="btn btn-warning"><%= BT.APIKEY %></button>
						<div class="valid apikey"></div>
					</td>
				</tr>
			</tbody>
		<table>
		<div class="btn-wrap p-3 text-center">
			<button class="btn btn-success" id="btSave">
				<%= BT.UPDATE %>
			</button>
			<button type="button" class="btn btn-danger" onclick="history.go(-1);">
				<%= BT.BACK %>
			</button>
		</div>
	</form>
</div>
<script>
	var ERR = {
		ID_NULL			: "<%= ERROR.JOIN.ID_NULL %>",
		ID_LEN			: "<%= ERROR.JOIN.ID_LEN %>",
		ID_TAKEN		: "<%= ERROR.JOIN.ID_TAKEN %>",
		ID_VALID		: "<%= ERROR.JOIN.ID_VALID %>",
		ID_OK				: "<%= ERROR.JOIN.ID_OK %>",
		PW_NULL			: "<%= ERROR.JOIN.PW_NULL %>",
		PW_LEN			: "<%= ERROR.JOIN.PW_LEN %>",
		PW2_NULL		: "<%= ERROR.JOIN.PW2_NULL %>",
		PW2_LEN			: "<%= ERROR.JOIN.PW2_LEN %>",
		PW_TAKEN		: "<%= ERROR.JOIN.PW_TAKEN %>",
		NAME_NULL		: "<%= ERROR.JOIN.NAME_NULL %>",
		EMAIL_NULL	: "<%= ERROR.JOIN.EMAIL_NULL %>",
		EMAIL_VALID	: "<%= ERROR.JOIN.EMAIL_VALID %>",
		EMAIL_TAKEN	: "<%= ERROR.JOIN.EMAIL_TAKEN %>",
	};
</script>
<%- include('../inc/foot', { js }) %> 

